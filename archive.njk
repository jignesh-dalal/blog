---
pagination:
  data: collections.posts
  size: 6
  reverse: true
  alias: postslist
layout: layouts/home.njk
permalink: /posts/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
eleventyNavigation:
  key: Archive
  order: 2
---

<h1>all posts</h1>

<div id="items">
    {% for post in postslist %}
    {% include "card.njk" %}
    {% endfor %}
</div>

<div class="pagination">
    <span class="previous_page">
        {% if pagination.href.previous %}
            <a href="{{ pagination.href.previous | url }}">previous page</a>
        {% else %}
            <span class="no-link">previous page</span>
        {% endif %}
    </span>
    <span class="pages">
        {% for pageEntry in pagination.pages %}
            <span class="page_number">
            {% if page.url == pagination.hrefs[ loop.index0 ] %}
                {{ loop.index }}
            {% elseif page == 1 %}
                <a href="/" aria-label="Page 1">{{ loop.index }}</a>
            {% else %}
                <a href="{{ pagination.hrefs[ loop.index0 ] | url }}" aria-label="Page {{ loop.index }}">{{ loop.index }}</a>
            {% endif %}
            </span>
        {% endfor %}
    </span>
    <span class="next_page">
        {% if pagination.href.next %}
            <a href="{{ pagination.href.next | url }}">next page</a>
        {% else %}
            <span class="no-link">next page</span>
        {% endif %}
    </span>
</div>